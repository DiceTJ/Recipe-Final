@model IEnumerable<Recipe.Library.Models.Recipe>

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.RecipeName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RecipeNotes)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RecipeInstructions)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.RecipeName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RecipeNotes)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RecipeInstructions)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.RecipeId">Edit</a> | <a asp-action="Details" asp-route-id="@item.RecipeId">Details</a> | <a asp-action="Delete" asp-route-id="@item.RecipeId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>