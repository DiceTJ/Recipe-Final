@model Recipe.Library.Models.Recipe
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
	<div class="form-horizontal">
		<h4>Students</h4>
		<hr />
		@Html.ValidationSummary(true,"", new {@class = "text-danger"})
		@Html.HiddenFor(model => model.RecipeId)

		<div class="form-group" style="font-weight:bold;">
			@Html.LabelFor(model => model.RecipeName, htmlAttributes: new { @class = "control-label col-md-2"})
			<div class="col-md-10" style="font-weight:normal;">
				@Html.DisplayFor(model => model.RecipeName, new { htmlAttributes= new{ @class = "form-control"}})
			</div>
		</div>

		<div class="form-group" style="font-weight:bold;">
			@Html.LabelFor(model => model.RecipeNotes, htmlAttributes: new { @class = "control-label col-md-2"})
			<div class="col-md-10" style="font-weight:normal;">
				@Html.DisplayFor(model => model.RecipeNotes, new { htmlAttributes= new{ @class = "form-control"}})
			</div>
		</div>

		<p></p>

		<div class="form-group" style="font-weight:bold;">
			@Html.LabelFor(model => model.RecipeInstructions, htmlAttributes: new { @class = "control-label col-md-2"})
			<div class="col-md-10" style="font-weight:normal;">
				@Html.DisplayFor(model => model.RecipeInstructions, new { htmlAttributes = new { @class = "form-control"}})
			</div>
		</div>

		<p></p>
	</div>
}

<div>
	@Html.ActionLink("Back to List","Index")
</div>